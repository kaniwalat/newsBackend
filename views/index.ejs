<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Soldan Açılır Liste</title>
    <style>
      body {
        margin: 0;
        font-family: Arial, sans-serif;
      }

      /* Overlay (arka plan karartması) */
      .overlay {
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        width: 80%;
        background: rgba(0, 0, 0, 0.4);
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease;
        z-index: 998;
      }
      .overlay.active {
        opacity: 1;
        visibility: visible;
      }
      /* Sidebar / panel */
      .sidebar {
        position: fixed;
        top: 0;
        left: 0; /* sol tarafa hizala */
        transform: translateX(-100%); /* tamamen gizle */
        width: 100px;
        height: 100%;
        background: #fff;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease;
        z-index: 999;
        padding: 20px;
        overflow-y: auto;
      }

      /* Açıldığında */
      .sidebar.active {
        transform: translateX(0); /* ekranın içine kaydır */
      }
      /* Kapat butonu */
      .close-btn {
        cursor: pointer;
        font-size: 24px;
        position: absolute;
        top: 10px;
        right: 15px;
        font-weight: bold;
      }

      /* Açma butonu */
      .open-btn {
        margin: 20px;
        padding: 10px 20px;
        background: #007bff;
        color: white;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        font-size: 16px;
      }

      /* Liste stili */
      .sidebar ul {
        list-style: none;
        padding: 0;
        margin-top: 40px;
      }
      .sidebar li {
        padding: 12px 8px;
        border-bottom: 1px solid #ddd;
        cursor: pointer;
        transition: background 0.2s;
      }
      .sidebar li:hover {
        background: #f0f0f0;
      }

      /* Responsive */
      @media (max-width: 600px) {
        .sidebar {
          width: 80%; /* mobilde daha geniş */
        }
      }
    </style>
  </head>
  <body>
    <button class="open-btn" id="openBtn">Listeyi Aç</button>

    <!-- Overlay -->
    <div class="overlay" id="overlay"></div>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
      <span class="close-btn" id="closeBtn">&times;</span>
      <h2>Menü</h2>
      <ul>
        <li>Anasayfa</li>
        <li>Hakkımızda</li>
        <li>Hizmetler</li>
        <li>Blog</li>
        <li>İletişim</li>
        <li>FAQ</li>
        <li>Destek</li>
      </ul>
    </div>

    <script>
      const openBtn = document.getElementById('openBtn');
      const closeBtn = document.getElementById('closeBtn');
      const sidebar = document.getElementById('sidebar');
      const overlay = document.getElementById('overlay');

      // Aç
      openBtn.addEventListener('click', () => {
        sidebar.classList.add('active');
        overlay.classList.add('active');
      });

      // Kapat butona tıklayınca
      closeBtn.addEventListener('click', () => {
        sidebar.classList.remove('active');
        overlay.classList.remove('active');
      });

      // Overlay tıklayınca da kapat
      overlay.addEventListener('click', () => {
        sidebar.classList.remove('active');
        overlay.classList.remove('active');
      });
    </script>
  </body>
</html>
